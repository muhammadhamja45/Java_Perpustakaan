            </GridPane>
            
            <!-- Charts Section -->
            <GridPane hgap="25.0" vgap="25.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="ALWAYS" minWidth="400.0" prefWidth="400.0" />
