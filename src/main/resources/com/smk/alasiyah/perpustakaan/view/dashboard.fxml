                                 <Label text="Buku Tersedia" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                                 <Label fx:id="bukuTersediaLabel" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Buku Dipinjam -->
                  <VBox styleClass="stat-card" style="-fx-background-color: white;" GridPane.columnIndex="2">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <StackPane style="-fx-background-color: rgba(231, 76, 60, 0.1); -fx-background-radius: 10; -fx-padding: 10;">
