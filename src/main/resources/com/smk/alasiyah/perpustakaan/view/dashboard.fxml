                              </StackPane>
                              <VBox>
                                 <Label text="Sedang Dipinjam" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                                 <Label fx:id="bukuDipinjamLabel" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Total Anggota -->
                  <VBox styleClass="stat-card" style="-fx-background-color: white;" GridPane.columnIndex="3">
