<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.smk.alasiyah.perpustakaan.controller.RiwayatController">
   <content>
      <VBox spacing="25.0" style="-fx-background-color: linear-gradient(to bottom, #f8f9fa 0%, #e9ecef 100%); -fx-padding: 30;">
         <children>
            <!-- Header Section -->
            <HBox spacing="15.0" alignment="CENTER_LEFT" style="-fx-background-color: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%); -fx-background-radius: 18; -fx-padding: 30 35 30 35; -fx-effect: dropshadow(gaussian, rgba(102, 126, 234, 0.4), 20, 0, 0, 6);">
               <children>
                  <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Riwayat Transaksi Perpustakaan" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #ffffff; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);" />
                        <Label text="Pantau dan kelola seluruh riwayat transaksi peminjaman dan pengembalian buku" style="-fx-font-size: 15px; -fx-text-fill: rgba(255,255,255,0.95); -fx-font-weight: 500;" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <!-- Statistics Cards -->
            <GridPane hgap="20.0" vgap="20.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
                  <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
                  <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
                  <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
               </columnConstraints>
               <children>
                  <!-- Total Transaksi -->
                  <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(102, 126, 234, 0.4), 20, 0, 0, 6);" GridPane.columnIndex="0">
                     <children>
                        <Label fx:id="lblTotalTransaksi" text="0" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #ffffff; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 8, 0, 0, 3);" />
                        <Label text="Total Transaksi" style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.95); -fx-font-weight: 700; -fx-letter-spacing: 0.5px;" />
                     </children>
                  </VBox>
                  
                  <!-- Sedang Dipinjam -->
                  <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(245, 87, 108, 0.4), 20, 0, 0, 6);" GridPane.columnIndex="1">
                     <children>
                        <Label fx:id="lblDipinjam" text="0" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #ffffff; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 8, 0, 0, 3);" />
                        <Label text="Sedang Dipinjam" style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.95); -fx-font-weight: 700; -fx-letter-spacing: 0.5px;" />
                     </children>
                  </VBox>
                  
                  <!-- Sudah Dikembalikan -->
                  <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(56, 239, 125, 0.4), 20, 0, 0, 6);" GridPane.columnIndex="2">
                     <children>
                        <Label fx:id="lblDikembalikan" text="0" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #ffffff; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 8, 0, 0, 3);" />
                        <Label text="Dikembalikan" style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.95); -fx-font-weight: 700; -fx-letter-spacing: 0.5px;" />
                     </children>
                  </VBox>
                  
                  <!-- Terlambat -->
                  <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: linear-gradient(135deg, #fc4a1a 0%, #f7b733 100%); -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(252, 74, 26, 0.4), 20, 0, 0, 6);" GridPane.columnIndex="3">
                     <children>
                        <Label fx:id="lblTerlambat" text="0" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #ffffff; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 8, 0, 0, 3);" />
                        <Label text="Terlambat" style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.95); -fx-font-weight: 700; -fx-letter-spacing: 0.5px;" />
                     </children>
                  </VBox>
               </children>
            </GridPane>
            
            <!-- Filter Section -->
            <VBox spacing="18.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 4);">
               <children>
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <children>
                        <Label text="Filter &amp; Pencarian Data" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                     </children>
                  </HBox>
                  
                  <GridPane hgap="15.0" vgap="15.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="20.0" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="20.0" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="20.0" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="15.0" />
                     </columnConstraints>
                     <children>
                        <!-- Search Field -->
                        <VBox spacing="8.0" GridPane.columnIndex="0">
                           <children>
                              <Label text="Pencarian" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #495057;" />
                              <TextField fx:id="searchField" promptText="Cari buku atau anggota..." style="-fx-font-size: 14px; -fx-padding: 12 15 12 15; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-width: 2; -fx-border-color: #e0e0e0; -fx-background-color: #f8f9fa;" />
                           </children>
                        </VBox>
                        
                        <!-- Status Filter -->
                        <VBox spacing="8.0" GridPane.columnIndex="1">
                           <children>
                              <Label text="Status" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #495057;" />
                              <ComboBox fx:id="statusCombo" promptText="Status" prefWidth="Infinity" maxWidth="Infinity" style="-fx-font-size: 14px; -fx-pref-height: 44px;" />
                           </children>
                        </VBox>
                        
                        <!-- Start Date -->
                        <VBox spacing="8.0" GridPane.columnIndex="2">
                           <children>
                              <Label text="Tanggal Mulai" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #495057;" />
                              <DatePicker fx:id="startDatePicker" promptText="Dari" prefWidth="Infinity" maxWidth="Infinity" style="-fx-font-size: 14px; -fx-pref-height: 44px;" />
                           </children>
                        </VBox>
                        
                        <!-- End Date -->
                        <VBox spacing="8.0" GridPane.columnIndex="3">
                           <children>
                              <Label text="Tanggal Akhir" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #495057;" />
                              <DatePicker fx:id="endDatePicker" promptText="Sampai" prefWidth="Infinity" maxWidth="Infinity" style="-fx-font-size: 14px; -fx-pref-height: 44px;" />
                           </children>
                        </VBox>
                        
                        <!-- Action Buttons -->
                        <VBox spacing="8.0" GridPane.columnIndex="4">
                           <children>
                              <Label text="Aksi" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #495057;" />
                              <HBox spacing="8.0">
                                 <children>
                                    <Button fx:id="btnFilter" onAction="#handleFilter" text="Filter" style="-fx-background-color: linear-gradient(to right, #667eea 0%, #764ba2 100%); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 12 18 12 18; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(102, 126, 234, 0.3), 10, 0, 0, 3);" HBox.hgrow="ALWAYS" />
                                    <Button fx:id="btnRefresh" onAction="#handleRefresh" text="Refresh" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 12; -fx-font-size: 14px; -fx-min-width: 44px; -fx-pref-width: 44px; -fx-cursor: hand;" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </GridPane>
               </children>
            </VBox>
            
            <!-- Table Section -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 4);">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Data Riwayat Transaksi" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                              <Label fx:id="lblRecordCount" text="Menampilkan 0 transaksi" style="-fx-font-size: 13px; -fx-text-fill: #6c757d; -fx-font-weight: 500;" />
                           </children>
                        </VBox>
                        <Button fx:id="btnExport" onAction="#handleExport" text="Export Excel" style="-fx-background-color: linear-gradient(to right, #28a745 0%, #20c997 100%); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 12 20 12 20; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(40, 167, 69, 0.3), 10, 0, 0, 3);" />
                     </children>
                  </HBox>
                  
                  <TableView fx:id="riwayatTable" VBox.vgrow="ALWAYS" styleClass="modern-table" style="-fx-background-color: transparent; -fx-background-radius: 10; -fx-border-color: #e9ecef; -fx-border-width: 1; -fx-border-radius: 10;">
                     <columns>
                        <TableColumn fx:id="colNo" prefWidth="60.0" text="No" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colTanggal" prefWidth="130.0" text="Tgl Pinjam" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colBuku" prefWidth="250.0" text="Judul Buku" />
                        <TableColumn fx:id="colAnggota" prefWidth="200.0" text="Nama Anggota" />
                        <TableColumn fx:id="colJenis" prefWidth="120.0" text="Jenis" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colKembali" prefWidth="130.0" text="Tgl Kembali" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colStatus" prefWidth="130.0" text="Status" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colDurasi" prefWidth="100.0" text="Durasi" style="-fx-alignment: CENTER;" />
                     </columns>
                     <placeholder>
                        <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 40;">
                           <children>
                              <Label text="[Kosong]" style="-fx-font-size: 48px; -fx-opacity: 0.5;" />
                              <Label text="Tidak ada data riwayat transaksi" style="-fx-font-size: 16px; -fx-text-fill: #6c757d; -fx-font-weight: 600;" />
                              <Label text="Riwayat transaksi akan muncul di sini" style="-fx-font-size: 13px; -fx-text-fill: #adb5bd;" />
                           </children>
                        </VBox>
                     </placeholder>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </content>
</ScrollPane>

